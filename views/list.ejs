<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%=listTitle%></h1>
    </div>
 <div class="box">
    
        <% for(var i=0; i<newListItems.length; i++){%>
          <div class="item">
            <input type="checkbox">
            <p><%=newListItems[i]%></p>
          </div>
        <% } %>

        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value= <%=listTitle%> >+</button>
        </form>
   
 </div>

 <div class="buttons-container">
    <a href="/"><button class="button-action">To Do List</button></a> 
    <a href="/work"><button class="button-action" >Work List</button></a> 
    <a href="/groceries"><button class="button-action" >Grocery List</button></a>
 </div>

